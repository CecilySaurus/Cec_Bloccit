<% if current_user %>
  <h4>Add a comment</h4>
  <%= form_for [@post, @post.comments.build] do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body %>
    </div>
      <%= f.submit "Create Comment", class: 'btn btn-success' %>  
    </div>
  <% end %>
<% end %>