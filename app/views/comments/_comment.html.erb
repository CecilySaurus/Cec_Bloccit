<div class="media">
    <% if comment.user %>
      <small>
        <em><%= comment.user.name || comment.user.email && comment.user.avatar %></em>
        <% if policy(comment).destroy? %>
          | <%= link_to "Delete", [@post, comment], method: :delete %>
        <% end %>
      </small>
      <p><%= comment.body %></p>
    <% end %>
</div>
